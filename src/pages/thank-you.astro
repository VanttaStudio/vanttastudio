---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import Thanks from "@components/infopages/ThankYou.astro";

const seo: AstroSeoProps = {
    title: "Mensaje Enviado — Vantta Studio",
    description:
        "¡Gracias por contactar con Vantta Studio! Tu mensaje ha sido enviado con éxito. Apreciamos tu interés y te responderemos lo antes posible.",
    canonical: "https://vanttastudio.cl/thank-you/",
    openGraph: {
        title: "¡Gracias! — Vantta Studio",
        description: "Tu solicitud ha sido recibida correctamente.",
        type: "website",
    }
};
---

<BaseLayout seo={seo}>
    <main class="bg-zinc-950 flex min-h-screen flex-col items-center justify-center">
        <Thanks />
    </main>
</BaseLayout>

<style is:global>
    /* Estilos específicos para la página de éxito */
    main {
        animation: successEntry 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes successEntry {
        from { 
            opacity: 0; 
            transform: scale(0.95);
        }
        to { 
            opacity: 1; 
            transform: scale(1);
        }
    }

    /* Personalización del componente Thanks si usa clases estándar */
    .thank-you-title {
        @apply text-white font-black uppercase tracking-tighter italic text-5xl md:text-7xl;
    }

    .thank-you-message {
        @apply text-zinc-400 font-mono text-sm uppercase tracking-widest mt-4;
    }
</style>