<---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Mapeo de las preguntas basadas en tu ui.ts (10 preguntas)
const faqIndices = Array.from({ length: 10 }, (_, i) => i + 1);
---

<section class="bg-zinc-950 py-24">
    <div class="mx-auto px-8 md:px-12 lg:pt-32 2xl:max-w-7xl">
        <div class="rounded-4xl bg-zinc-900 p-8 lg:rounded-6xl lg:p-20 border border-zinc-800 shadow-2xl relative overflow-hidden">
            <div class="absolute top-0 right-0 -mt-10 -mr-10 w-64 h-64 bg-lime-500/5 rounded-full blur-3xl"></div>
            
            <div class="relative z-10">
                <div class="inline-flex items-center gap-4">
                    <div class="hidden h-1 w-20 bg-lime-500 md:block"></div>
                    <span class="text-xs font-bold uppercase tracking-widest text-lime-500">FAQ.</span>
                </div>

                <p class="mt-8 font-display text-5xl font-bold text-white md:text-7xl lg:text-9xl tracking-tighter leading-none">
                    {t("faq.subtitle") || "frequent questions"}
                    <span class="md:block text-zinc-500">& answers</span>
                </p>
            </div>
        </div>

        <div class="mx-auto mt-16 max-w-4xl space-y-4">
            {faqIndices.map((i) => (
                <details class="group border-b border-zinc-800 pb-4 transition-all duration-300">
                    <summary class="flex w-full cursor-pointer items-center justify-between py-6 text-left font-display text-xl font-bold tracking-tight text-white transition-all hover:text-lime-500 lg:text-3xl focus:outline-none">
                        <span class="max-w-[90%]">
                            {t(`faqs.question${i}` as any)}
                        </span>
                        <span class="ml-4 flex-shrink-0 text-lime-500 transition-transform duration-300 group-open:rotate-45">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                            </svg>
                        </span>
                    </summary>
                    <div class="overflow-hidden transition-all duration-500">
                        <p class="pb-8 pr-12 text-lg leading-relaxed text-zinc-400 lg:text-xl">
                            {t(`faqs.answer${i}` as any)}
                        </p>
                    </div>
                </details>
            ))}
        </div>

        <div class="mt-20 text-center">
            <p class="text-zinc-500 text-lg">
                {t("faq.otherquestions")} 
                <a href="#contact" class="text-lime-500 font-bold hover:underline ml-2 uppercase tracking-wide italic">
                    {t("contactus")} →
                </a>
            </p>
        </div>
    </div>
</section>

<style>
    /* Estilo para ocultar la flecha por defecto de details */
    details > summary::-webkit-details-marker {
        display: none;
    }
    
    .rounded-4xl {
        border-radius: 2.5rem;
    }
    @media (min-width: 1024px) {
        .rounded-6xl {
            border-radius: 4.5rem;
        }
    }

    /* Suavizado de la apertura del acordeón */
    details[open] summary ~ * {
        animation: slideDown 0.4s ease-out;
    }

    @keyframes slideDown {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>