---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// He añadido estas props por si quieres reutilizar el componente con distintos clientes
// Si no se pasan, usará los valores por defecto que definiremos.
const { 
  author = "Nombre del Cliente", 
  role = "CEO de EmpresaX", 
  quote = "La frase del testimonio aparecerá aquí." 
} = Astro.props;
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 2xl:max-w-7xl">
    <div class="p-8 lg:p-20 bg-blue-700 rounded-4xl lg:rounded-6xl">
      <div class="inline-flex items-center gap-4">
        <div class="w-20 h-1 bg-white hidden md:block"></div>
        <span class="text-xs font-semibold tracking-wide uppercase text-white">
          {author}, {role}.
        </span>
      </div>
      <p
        class="mt-8 text-3xl font-display font-semibold md:text-5xl lg:text-7xl text-white leading-tight italic">
        "{quote}"
      </p>
    </div>
  </div>
</section>