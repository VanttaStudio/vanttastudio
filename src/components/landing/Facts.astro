---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Definimos los puntos clave para que sea f√°cil editarlos o traducirlos
const stats = [
  {
    title: t("about.stats.1.title"),
    description: t("about.stats.1.desc"),
  },
  {
    title: t("about.stats.2.title"),
    description: t("about.stats.2.desc"),
  },
  {
    title: t("about.stats.3.title"),
    description: t("about.stats.3.desc"),
  },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 2xl:max-w-7xl lg:py-24">
    <div class="grid grid-cols-1 gap-4 xl:grid-cols-2 items-start">
      
      <div class="p-8 lg:p-20 bg-zinc-900 rounded-4xl lg:rounded-5xl border border-zinc-800">
        <div class="inline-flex items-center gap-4">
          <div class="w-20 h-1 bg-blue-500 hidden md:block"></div>
          <span class="text-xs font-semibold tracking-wide uppercase text-zinc-400">
            {t("about.tagline")}
          </span>
        </div>
        <h2 class="text-4xl mt-8 font-display lg:text-7xl font-bold text-white leading-tight">
          {t("about.title")} <span class="lg:block text-blue-500">{t("about.title.highlight")}</span>
        </h2>
        <div class="text-zinc-400 text-base mt-8 space-y-4 leading-relaxed">
          <p set:html={t("about.description.p1")} />
          <p set:html={t("about.description.p2")} />
        </div>
      </div>

      <ol
        role="list"
        class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-1 items-center rounded-4xl lg:rounded-5xl gap-4 h-full p-8 lg:p-20 list-none bg-blue-500">
        {stats.map((stat) => (
          <li class="border-b border-blue-400/30 pb-6 last:border-0 md:odd:border-r md:odd:pr-4 md:border-b-0 xl:border-r-0 xl:border-b xl:pr-0">
            <h3 class="text-lg lg:text-3xl tracking-tight font-bold text-white font-display uppercase">
              {stat.title}
            </h3>
            <p class="mt-2 text-sm lg:text-base text-blue-100 leading-relaxed">
              {stat.description}
            </p>
          </li>
        ))}
      </ol>
      
    </div>
  </div>
</section>